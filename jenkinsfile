pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'checkout scm here!'
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        stage('Run Node.js Application') {
            steps {
                script {
                    sh 'npm install -g pm2'
                    sh 'pm2 start index.js'
                }
            }
        }
    }
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
